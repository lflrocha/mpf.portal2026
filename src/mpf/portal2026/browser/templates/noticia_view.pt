<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="mpf.portal2026">

<body>

  <metal:content-title metal:fill-slot="content-title">
    <tal:dummy tal:replace="nothing" />
  </metal:content-title>

  <metal:content-description metal:fill-slot="content-description">
    <tal:dummy tal:replace="nothing" />
  </metal:content-description>

  <metal:content-core metal:fill-slot="content-core">

  <metal:fill-slot fill-slot="column_one" />

    <section class="noticia">

      <!-- wrapper (evita <main> duplicado se o master j√° tiver) -->
      <div id="main-content" class="w-full">
        <div class="mx-auto max-w-[1440px] px-3 py-5 sm:px-4 sm:py-8">

          <!-- Breadcrumb -->
          <nav aria-label="Breadcrumb" class="text-sm text-gray-600"
               tal:define="crumbs view/breadcrumbs">

            <ol class="flex flex-wrap items-center gap-2">
              <tal:loop tal:repeat="c crumbs">

                <tal:notlast tal:condition="not: repeat/c/end">
                  <li>
                    <a tal:attributes="href c/absolute_url"
                       tal:content="c/Title"
                       class="rounded hover:underline focus:outline-none focus:ring-2 focus:ring-[color:var(--brand)]/30">
                      P√°gina
                    </a>
                  </li>
                  <li class="text-gray-300" aria-hidden="true">/</li>
                </tal:notlast>

                <tal:last tal:condition="repeat/c/end">
                  <li class="text-gray-900 font-medium" tal:content="c/Title">Not√≠cia</li>
                </tal:last>

              </tal:loop>
            </ol>
          </nav>

          <!-- GRID 70/30 -->
          <article class="mt-4 sm:mt-6 grid gap-4 sm:gap-6 lg:grid-cols-12 lg:items-start">

            <!-- COLUNA 70% -->
            <div class="lg:col-span-8">

              <!-- Cabe√ßalho -->
              <header class="rounded-md border border-gray-300 bg-white overflow-hidden">
                <div class="p-4 sm:p-6 lg:p-7">
                  <p class="text-[11px] font-semibold uppercase tracking-wider text-[color:var(--brand)]"
                     tal:content="view/tipo_noticia">
                    Destaque institucional
                  </p>

                  <h1 class="mt-2 text-2xl sm:text-3xl font-semibold leading-tight text-gray-900"
                      tal:content="view/titulo">
                    T√≠tulo da not√≠cia
                  </h1>

                  <!-- Subt√≠tulo / suti√£ -->
                  <p class="mt-2 text-base text-gray-700 leading-relaxed"
                     tal:condition="view/descricao"
                     tal:content="view/descricao">
                    Subt√≠tulo/suti√£ da not√≠cia
                  </p>

                  <!-- Meta -->
                  <div class="mt-4 flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-gray-600">
                    <span class="inline-flex items-center gap-2">
                      <span aria-hidden="true">üïí</span>
                      <strong class="text-gray-900">Data:</strong>
                      <span tal:content="view/data_modificacao_formatada">
                        18/12/2025 ‚Ä¢ 14:32
                      </span>
                    </span>

                    <span class="inline-flex items-center gap-2">
                      <span aria-hidden="true" class="text-gray-400">‚Ä¢</span>
                      <strong class="text-gray-900">Unidade:</strong>
                      <span tal:content="view/unidade_origem">Procuradoria-Geral da Rep√∫blica</span>
                    </span>
                  </div>
                </div>

                <!-- A√ß√µes r√°pidas -->
                <div class="border-t border-gray-200 p-3 sm:p-4 bg-gray-50">
                  <div class="flex flex-wrap items-center gap-2">

                    <a tal:attributes="href string:${context/portal_url}/comunicacao/noticias"
                       class="inline-flex items-center gap-2 rounded-md border border-gray-300 bg-white px-3 py-2 text-sm font-semibold text-gray-900 hover:bg-gray-50
                              focus:outline-none focus:ring-2 focus:ring-[color:var(--brand)]/30">
                      <svg aria-hidden="true" class="h-4 w-4 opacity-80"
                           xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                           stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M15 18l-6-6 6-6" />
                      </svg>
                      Voltar para not√≠cias
                    </a>

                    <a href="#corpo-noticia"
                       class="inline-flex items-center gap-2 rounded-md border border-gray-300 bg-white px-3 py-2 text-sm font-semibold text-gray-900 hover:bg-gray-50
                              focus:outline-none focus:ring-2 focus:ring-[color:var(--brand)]/30">
                      Ir para o conte√∫do
                      <svg aria-hidden="true" class="h-3.5 w-3.5 opacity-70"
                           xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                           stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 18l6-6-6-6" />
                      </svg>
                    </a>

                  </div>
                </div>
              </header>

              <!-- Imagem destaque -->
              <section class="mpf-noticia-imagem"
                      tal:define="img view/imagem_noticia"
                      tal:condition="img/exists">

                <figure class="mpf-noticia-figure">

                  <div class="mpf-noticia-imagem-wrap">
                    <img tal:attributes="src img/url; alt img/alt"
                        class="mpf-noticia-imagem-img"
                        loading="lazy" />
                  </div>

                  <figcaption class="mpf-noticia-imagem-credito">
                    <span class="sr-only">Cr√©dito da imagem:</span>
                    <span >Cr√©dito</span>
                  </figcaption>

                </figure>

              </section>

              <!-- Corpo -->
              <section id="corpo-noticia" class="mt-4 sm:mt-6 rounded-md border border-gray-300 bg-white scroll-mt-48">
                <div class="p-4 sm:p-6 lg:p-7">

                  <div class="prose max-w-none">
                    <div tal:replace="structure view/corpo_html"></div>
                  </div>

                  <!-- Anexos -->
                  <div class="mt-8 border-t border-gray-200 pt-6"
                       tal:define="anexos view/anexos"
                       tal:condition="anexos">

                    <h2 class="text-lg font-semibold text-gray-900">Anexos</h2>

                    <ul class="mt-3 grid gap-2 text-sm">
                      <tal:loop tal:repeat="a anexos">
                        <li>
                          <a tal:attributes="href a/url"
                             class="group inline-flex w-full items-center justify-between gap-3 rounded-md border border-gray-300 bg-white px-4 py-3 hover:bg-gray-50
                                    focus:outline-none focus:ring-2 focus:ring-[color:var(--brand)]/30">

                            <span class="min-w-0">
                              <span class="block font-semibold text-gray-900 truncate"
                                    tal:content="a/title">Documento.pdf</span>
                              <span class="block text-xs text-gray-600"
                                    tal:content="a/size_human">250 KB</span>
                            </span>

                            <span class="shrink-0 inline-flex items-center gap-2 text-[color:var(--brand)] font-semibold">
                              Baixar
                              <svg aria-hidden="true" class="h-3.5 w-3.5 opacity-80"
                                   xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                                   stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M9 18l6-6-6-6" />
                              </svg>
                            </span>

                          </a>
                        </li>
                      </tal:loop>
                    </ul>
                  </div>

                </div>

                <!-- Rodap√© do artigo -->
                <div class="border-t border-gray-200 p-4 sm:p-6 bg-gray-50"
                     tal:define="tags view/tags"
                     tal:condition="tags">
                  <h2 class="text-lg font-semibold text-gray-900 mb-2">Tags</h2>

                  <ul class="flex flex-wrap gap-2">
                    <li tal:repeat="tag tags">
                      <a tal:attributes="href string:${portal_url}/@@search?Subject=${tag}"
                         class="inline-flex items-center rounded-full
                                bg-white border border-gray-300
                                px-3 py-1 text-xs font-medium text-gray-700
                                hover:bg-gray-100">
                        <tal:block tal:content="tag" />
                      </a>
                    </li>
                  </ul>
                </div>


                <div class="border-t border-gray-200 p-4 sm:p-6 bg-gray-50">
                  <a tal:attributes="href string:${context/portal_url}/comunicacao/noticias"
                     class="inline-flex items-center justify-center rounded-md bg-[color:var(--brand)] px-4 sm:px-5 py-2.5 text-sm font-semibold text-white hover:opacity-95
                            focus:outline-none focus:ring-2 focus:ring-[color:var(--brand)]/30">
                    Voltar para not√≠cias
                  </a>
                </div>
              </section>

            </div>

            <!-- COLUNA 30% ‚Äî SIDEBAR -->
            <aside class="lg:col-span-4 grid gap-4 sm:gap-6">

              <!-- Compartilhar -->
              <section class="rounded-md border border-gray-300 bg-white overflow-hidden"
                       data-share-box>
                <header class="p-4 sm:p-6 border-b border-gray-200">
                  <h2 class="text-lg font-semibold text-gray-900">Compartilhar</h2>
                  <p class="mt-1 text-sm text-gray-600">A√ß√µes r√°pidas para divulgar este conte√∫do.</p>
                </header>

                <div class="p-4 sm:p-6 grid gap-3">

                  <!-- Copiar link -->
                  <button type="button"
                          class="group flex w-full items-center justify-between rounded-md border border-gray-300 bg-white px-4 py-3 hover:bg-gray-50
                                 focus:outline-none focus:ring-2 focus:ring-[color:var(--brand)]/30"
                          tal:attributes="data-copy-url context/absolute_url">
                    <span class="font-semibold text-gray-900">Copiar link</span>
                    <svg aria-hidden="true" class="h-3.5 w-3.5 opacity-70"
                         xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M9 18l6-6-6-6" />
                    </svg>
                  </button>

                  <!-- E-mail -->
                  <a tal:attributes="href string:mailto:?subject=${view/titulo}&body=${context/absolute_url}"
                     class="group flex items-center justify-between rounded-md border border-gray-300 bg-white px-4 py-3 hover:bg-gray-50
                            focus:outline-none focus:ring-2 focus:ring-[color:var(--brand)]/30">
                    <span class="font-semibold text-gray-900">Enviar por e-mail</span>
                    <svg aria-hidden="true" class="h-3.5 w-3.5 opacity-70"
                         xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M9 18l6-6-6-6" />
                    </svg>
                  </a>

                </div>
              </section>

              <!-- Card brand opcional -->
              <aside class="rounded-xl bg-[color:var(--brand)] p-4 sm:p-6 text-white">
                <h3 class="text-lg font-semibold">Quer acompanhar o MPF?</h3>
                <p class="mt-2 text-sm text-white/90">
                  Receba atualiza√ß√µes e conte√∫dos selecionados.
                </p>
                <a href="#"
                   class="mt-5 inline-flex w-full items-center justify-center rounded-md bg-white px-4 py-2.5 text-sm font-semibold text-[color:var(--brand)]
                          hover:bg-white/95 focus:outline-none focus:ring-2 focus:ring-white/40">
                  Inscrever-se
                </a>
              </aside>

            </aside>
          </article>

        </div>
      </div>

    </section>

  </metal:content-core>
</body>
</html>
